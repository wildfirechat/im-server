        </dependency>
                
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>

        <dependency>
	        <groupId>org.kaazing</groupId>
	        <artifactId>robot.junit</artifactId>
	        <version>0.0.0.12</version>
